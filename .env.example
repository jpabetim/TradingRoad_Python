# TradingRoad - Variables de entorno
# Copia este archivo como .env y completa los valores

# Configuración general
SECRET_KEY=tu_clave_secreta_aqui
DEBUG=True
ENVIRONMENT=development

# API y CORS
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:8000", "http://localhost:3000", "http://localhost"]
PROJECT_NAME=TradingRoad

# Base de datos
DATABASE_URL=sqlite:///./app.db
# Para PostgreSQL usar: DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/tradingroad

# Seguridad
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# Correo electrónico para notificaciones
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_correo@gmail.com
SMTP_PASSWORD=tu_contraseña

# API de Google Gemini
GEMINI_API_KEY=tu_api_key_de_gemini

# Configuración para Exchanges
# Estas credenciales son solo para desarrollo y pruebas
BINANCE_API_KEY=tu_api_key_de_binance
BINANCE_API_SECRET=tu_api_secret_de_binance

BINGX_API_KEY=tu_api_key_de_bingx
BINGX_API_SECRET=tu_api_secret_de_bingx

BYBIT_API_KEY=tu_api_key_de_bybit
BYBIT_API_SECRET=tu_api_secret_de_bybit

# Otros ajustes
MAX_WORKERS=4
LOG_LEVEL=INFO
